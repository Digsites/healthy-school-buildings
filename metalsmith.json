{
  "source": "./src",
  "destination": "./_site",
  "plugins": {
    "metalsmith-csv": {
      "files": [
        "data/school-conditions.csv",
        "data/lead-summary-2016.csv"
      ]
    },
    "metalsmith-in-place": {
      "engine": "liquid",
      "partials": "templates/includes"
    },
    "metalsmith-markdown": {},
    "metalsmith-metadata": {
      "site": "data/site.json"
    },
    "metalsmith-permalinks": {
      "pattern": ":title",
      "relative": false
    },
    "metalsmith-browserify": {
      "dest": "js/bundle.js",
      "args": ["src/js/index.js"]
    },
    "metalsmith-layouts": {
      "engine": "liquid",
      "directory": "templates/layouts",
      "includeDir": "templates/includes"
    },
    "metalsmith-sass": {
      "outputStyle": "expanded"
    },
    "metalsmith-watch": {
      "paths": {
        "src/**/*": "**/*",
        "templates/**/*": "**/*"
      }
    }
  }
}
