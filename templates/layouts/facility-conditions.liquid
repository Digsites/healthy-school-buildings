<!DOCTYPE html>
<html>
  {% include common/head %}

  <script defer src="https://code.getmdl.io/1.2.1/material.min.js"></script>

  {% if school %}
    <link rel="stylesheet" href="../css/style.css">
    <script defer src="../js/bundle.js"></script>
  {% else %}
    <link rel="stylesheet" href="css/style.css">
    <script defer src="js/bundle.js"></script>
  {% endif %}

  <body class="mdl-color--grey-100 mdl-color-text--grey-700 mdl-base facility-conditions">
    <div class="mdl-layout__container">

      <div class="mdl-layout mdl-layout--fixed-header mdl-layout--fixed-tabs">

        <main class="mdl-layout__content">

        <div class="page-content">
          <div class="mdl-grid facility-conditions-viewport">
            <div class="mdl-cell mdl-cell--5-col-desktop mdl-cell--4-col-tablet left mdl-cell--order-1 mdl-cell--order-2-phone">
              {% include facility-conditions/search %}

              {% if school %}
                {% include facility-conditions/header %}
                {% include facility-conditions/tabs %}
              {% else %}
                {% include facility-conditions/instructions %}
              {% endif %}

            </div>
            <div class="mdl-cell mdl-cell--7-col-desktop mdl-cell--4-col-tablet mdl-cell--order-2 mdl-cell--order-1-phone">
              <div id="map">
                <div id="lead-only-message">*Schools w/ lead data</div>
              </div>
            </div>
          </div>
        </div>

        </main>
      </div>

      <!-- {% include common/footer %} -->
    </div>

    {% include facility-conditions/filter-dialog %}

  </body>
</html>

<script type="text/javascript">
  window.data = {
    all: {{allSchools | json}},
    school: {{school | json}}
  }

</script>
