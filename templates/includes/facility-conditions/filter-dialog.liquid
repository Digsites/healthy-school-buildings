<dialog class="mdl-dialog">
  <h4 class="mdl-dialog__title">Filters</h4>
  <hr />

  <div class="mdl-dialog__content">
    <h6>FCI</h6>
    <div>
      <div>
        <div class="mdl-switch__label">Min FCI (<span id="min-fci-output"></span>)</div>
        <input id="min-fci" class="mdl-slider mdl-js-slider" type="range" min="0" max="100" value="0">
      </div>

      <div>
        <div class="mdl-switch__label">Max FCI (<span id="max-fci-output"></span>)</div>
        <input id="max-fci" class="mdl-slider mdl-js-slider" type="range" min="0" max="100" value="100">
      </div>
    </div>

    <hr />

    <div class="mdl-grid ">
      <div class="mdl-cell--7-col">
        <h6>Lead in Water</h6>
        <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="lead-only">
          <input type="checkbox" id="lead-only" class="mdl-switch__input">
          <span class="mdl-switch__label">Lead samples only</span>
        </label>
      </div>
      <div class="mdl-cell--5-col">
        <h6>School Type</h6>
        <select id="school-type">
          <option value="">All</option>
          {% for type in schoolTypes %}
            <option>{{type}}</option>
          {% endfor %}
        </select>
      </div>
    </div>

    <hr />
  </div>


  <div class="mdl-dialog__actions">
    <button type="button" class="mdl-button close">Save</button>
    <button type="button" class="mdl-button clear">Clear</button>
  </div>
</dialog>
